{
  "name": "yt-thumbnails",
  "version": "1.0.1",
  "description": "YouTube video thumbnail grid generator - Extract frames and create beautiful grid images from YouTube videos",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "yt-thumbnails": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outfile dist/index.js --target node --external sharp",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "youtube",
    "thumbnail",
    "video",
    "grid",
    "ffmpeg",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ieunsu/yt-thumbnails.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.3"
  }
}
